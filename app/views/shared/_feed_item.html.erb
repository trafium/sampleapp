<li data-id="<%= feed_item.id %>" data-user="<%= feed_item.user.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <%= render partial: 'shared/status', locals: {user: feed_item.user} %>
  <span class="content"><%= feed_item.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.content %>
  <% end %>
  <% if signed_in? %>
    <%= render partial: 'shared/like_form', locals: { micropost: feed_item} %>
  <% end %>
</li>